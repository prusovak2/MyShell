CC = gcc
CFLAGS = -Wall -Wextra
FLEXFLAGS = -lfl
DFLAGS = -D DEBUG
INCLUDE = -I headers 
READLINE = -lreadline

OBJ = CallBinary.o delimToString.o ExecCmd.o  MyCd.o MyExit.o MyShell.o lex.yy.o 

all: Dmysh

.PHONY : all clean 

Dmysh: $(OBJ) 
	$(CC) $(CFLAGS) $(INCLUDE) $(FLEXFLAGS) $(DFLAGS) $(OBJ) -o Dmysh $(READLINE)

lex.yy.o: FlexReadCmds.c
	flex FlexReadCmds.c
	$(CC) $(CFLAGS) $(INCLUDE) $(FLEXFLAGS) $(DFLAGS) -c lex.yy.c -o lex.yy.o $(READLINE)

#specify dependencies between object files and source files
%.o : %.c
	$(CC) $(CFLAGS) $(INCLUDE) $(DFLAGS) -c $< -o $@ $(READLINE)

clean:
	rm *.o Dmysh lex.yy.c